-- Tuple expressions

-- "texp" is short for tuple expressions:
-- things that can appear unparenthesized as long as they're
-- inside parens or delimited by commas
texp :: { ECP }
        : exp                           { $1 }

        -- Note [Parsing sections]
        -- ~~~~~~~~~~~~~~~~~~~~~~~
        -- We include left and right sections here, which isn't
        -- technically right according to the Haskell standard.
        -- For example (3 +, True) isn't legal.
        -- However, we want to parse bang patterns like
        --      (!x, !y)
        -- and it's convenient to do so here as a section
        -- Then when converting expr to pattern we unravel it again
        -- Meanwhile, the renamer checks that real sections appear
        -- inside parens.
        | infixexp qop
                             {% runECP_P $1 >>= \ $1 ->
                                runPV (rejectPragmaPV $1) >>
                                runPV $2 >>= \ $2 ->
                                return $ ecpFromExp $
                                reLocA $ sLL (reLoc $1) (reLoc $>) $ SectionL noAnn $1 $2 }
        | qopm infixexp      { ECP $
                                superInfixOp $
                                runECP_PV $2 >>= \ $2 ->
                                $1 >>= \ $1 ->
                                pvA $ mkHsSectionR_PV (comb2 (reLoc $1) (reLoc $>)) $1 $2 }

       -- View patterns get parenthesized above
        | exp '->' texp   { ECP $
                             runECP_PV $1 >>= \ $1 ->
                             runECP_PV $3 >>= \ $3 ->
                             mkHsViewPatPV (comb2 (reLoc $1) (reLoc $>)) $1 $3 [mu AnnRarrow $2] }

-- Always at least one comma or bar.
-- Though this can parse just commas (without any expressions), it won't
-- in practice, because (,,,) is parsed as a name. See Note [ExplicitTuple]
-- in GHC.Hs.Expr.
tup_exprs :: { forall b. DisambECP b => PV ([AddApiAnn],SumOrTuple b) }
           : texp commas_tup_tail
                           { runECP_PV $1 >>= \ $1 ->
                             $2 >>= \ $2 ->
                             do { t <- amsA (sL1 $1 (Just $1)) [AddApiAnn AnnComma (fst $2)]
                                ; return ([],Tuple (t : snd $2)) } }

           | texp bars   { runECP_PV $1 >>= \ $1 -> return $
                            (mvbars (fst $2), Sum 1  (snd $2 + 1) $1) }

           | commas tup_tail
                 { $2 >>= \ $2 ->
                   do { cos <- mapM (\ll -> amsr (L ll Nothing) [AddApiAnn AnnComma ll]) (fst $1)
                      ; return ([],Tuple (cos ++ $2)) } }

           | bars texp bars0
                { runECP_PV $2 >>= \ $2 -> return $
                  (mvbars (fst $1) ++ mvbars (fst $3), Sum (snd $1 + 1) (snd $1 + snd $3 + 1) $2) }

-- Always starts with commas; always follows an expr
commas_tup_tail :: { forall b. DisambECP b => PV (SrcSpan,[LocatedA (Maybe (LocatedA b))]) }
commas_tup_tail : commas tup_tail
        { $2 >>= \ $2 ->
          do { cos <- mapM (\l -> amsr (L l Nothing) [AddApiAnn AnnComma l]) (tail $ fst $1)
             ; return ((head $ fst $1, cos ++ $2)) } }

-- Always follows a comma
tup_tail :: { forall b. DisambECP b => PV [LocatedA (Maybe (LocatedA b))] }
          : texp commas_tup_tail { runECP_PV $1 >>= \ $1 ->
                                   $2 >>= \ $2 ->
                                   do { t <- amsA (L (gl $1) (Just $1)) [AddApiAnn AnnComma (fst $2)]
                                      ; return (t : snd $2) } }
          | texp                 { runECP_PV $1 >>= \ $1 ->
                                   return [L (gl $1) (Just $1)] }
          | {- empty -}          { return [noLocA Nothing] }

