        | '(' consym ')'        {% amsr (sLL $1 $> (unLoc $2))
                                       [mop $1,mjA AnnVal $2,mcp $3] }
        | sysdcon               { sL (gl $1) $ nameRdrName (dataConName (unLoc $1)) }

con_list :: { Located [LocatedA RdrName] }
