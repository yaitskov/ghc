                           (h:t) -> do
                             h' <- addAnnotationA h AnnSemi (gl $2)
                             return (sLL $1 $> (h':t)) }
        | dbind                        { let this = $1 in this `seq` (sL1 (reLoc $1) [this]) }
--      | {- empty -}                  { [] }

