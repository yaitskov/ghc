dbinds  :: { Located [LIPBind GhcPs] } -- reversed
        : dbinds ';' dbind
                      -- {% addAnnotation (gl $ last $ unLoc $1) AnnSemi (gl $2) >>
                      --    return (let { this = $3; rest = unLoc $1 }
                      --         in rest `seq` this `seq` sLL $1 $> (this : rest)) }
                      {% case unLoc $1 of
