                                          runECP_PV $1 >>= \ $1 ->
                                          runECP_PV $2 >>= \ $2 ->
                                          mkHsAppPV (noAnnSrcSpan $ comb2A (reLoc $1) $>) $1 $2 }

        -- See Note [Whitespace-sensitive operator parsing] in GHC.Parser.Lexer
        | fexp PREFIX_AT atype       {% runECP_P $1 >>= \ $1 ->
                                        runPV (checkExpBlockArguments $1) >>= \_ ->
